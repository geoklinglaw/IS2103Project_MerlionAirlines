<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="MerlionAirlines-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/MerlionAirlines</jta-data-source>
    <class>entity.AircraftType</class>
    <class>entity.AirportConfiguration</class>
    <class>entity.CabinClass</class>
    <class>entity.Employee</class>
    <class>entity.Fare</class>
    <class>entity.FareType</class>
    <class>entity.Flight</class>
    <class>entity.FlightBooking</class>
    <class>entity.FlightReservation</class>
    <class>entity.FlightRoute</class>
    <class>entity.FlightSchedule</class>
    <class>entity.FlightSchedulePlan</class>
    <class>entity.Partner</class>
    <class>entity.Person</class>
    <class>entity.Seat</class>
    <class>entity.SeatInventory</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
